{
  // VS Code launch configurations (Prompt 1 scaffold)
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI (Uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "server.src.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "console": "integratedTerminal",
      "env": {
        // Set API keys as needed
        // "OPENAI_API_KEY": "",
        // "CLAUDE_API_KEY": ""
      }
    },
    {
      "name": "pyRevit ui.py (RPS)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/addin/revit_ai.bundle/scripts/ui.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-q"
      ],
      "console": "integratedTerminal"
    }
  ]
}
